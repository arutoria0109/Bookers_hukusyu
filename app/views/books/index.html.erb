<h1>Books</h1>

<table>
  <th>Title</th>
  <th>Body</th>
  <% @books.each do |book| %>
  <td><%= book.title %></td>
  <td><%= book.body %></td>
  <td><%= link_to "Show", books_path %></td>
  <td><%= link_to "Edit", edit_book_path %></td>
  <td><%= link_to "Destroy", book_path %></td>
  <% end %>
</table>

<h2>New Book</h2>
<%= form_with model: @book, url: books_path do |f| %>
<%= f.label "Title" %></br>
<%= f.text_field :title %></br>
<%= f.label "Body" %></br>
<%= f.text_area :body %></br>
<%= f.submit "Create Book" %>
<% end %>

